<p id="notice"><%= notice %></p>

<h1>Levels</h1>


<div class="nav navbar-right">
<%=form_tag(levels_path, method: :get) do %>
<%= text_field_tag :term, params[:term] %>
<%=submit_tag :Search  %>
<% end %>
</div>
<table>
  <thead>
    <tr>
      <th>Designation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @levels.each do |level| %>
      <tr>
        <td><%= level.designation %></td>
        <td><%= link_to 'Show', level %></td>
        <td><%= link_to 'Edit', edit_level_path(level) %></td>
        <td><%= link_to 'Destroy', level, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Level', new_level_path %>

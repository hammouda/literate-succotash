<p id="notice"><%= notice %></p>
<h1> Levels </h1>

<table class="table">

  <thead>
<tr><th>
<%=form_tag(levels_path, method: :get) do %>
<%= text_field_tag :term, params[:term] ,class:"search-input" %>
</th><th>
<%=submit_tag :Search  %>
<% end %>
</th>
<th colspan="3">
<%= link_to new_level_path do %>
   <%= image_tag "add.png", class: "add" %>
<% end %>
</th>
</tr>
    <tr>
      <th>Designation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <% @levels.each do |level| %>
    <tr>
        <td><%= level.designation %></td>
        <td><%= link_to 'Show', level %></td>
        <td><%= link_to 'Edit', edit_level_path(level) %></td>
        <td><%= link_to 'Destroy', level, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
    <% end %>

 </table>

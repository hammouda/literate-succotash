<h1> Students </h1>

<table class="table">

  <thead>
<tr><th colspan=5>
<%=form_tag(students_path, method: :get) do %>
<%= text_field_tag :term, params[:term] ,class:"search-input" %>
</th><th>
<%=submit_tag :Search  %>
<% end %>
</th>
<th colspan="3">
<%= link_to new_student_path do %>
   <%= image_tag "add.png", class: "add" %>
<% end %>
</th>

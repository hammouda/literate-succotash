<div class="forms">
<%= simple_form_for(@message) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :subject %>
    <%= f.input :content %>
    <%= f.input :type %>
    <%= f.association :parent %>
    <%= f.association :student %>
    <%= f.association :teacher %>
    <%= f.association :report %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
</div>
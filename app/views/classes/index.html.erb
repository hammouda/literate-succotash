                <tr>
                 <th>Designation</th>
                 <th>Level</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
    <% @classes.each do |classe| %>
                 <tr>
                  <td><%= classe.designation %></td>
                  <td><%= classe.level %></td>
                  <td><%= link_to 'Show', classe %></td>
                  <td><%= link_to 'Edit', edit_class_path(classe) %></td>
                  <td><%= link_to 'Destroy', classe, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
                  </tr>
     <% end %>

              </table>
            </div>

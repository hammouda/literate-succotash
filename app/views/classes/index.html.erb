<p id="notice"><%= notice %></p>

<h1>Classes</h1>

<div class="nav navbar-right">
<%=form_tag(classes_path, method: :get) do %>
<%= text_field_tag :term, params[:term] %>
<%=submit_tag :Search  %>
<% end %>
</div>
<table>
  <thead>
    <tr>
      <th>Designation</th>
      <th>Level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @classes.each do |classe| %>
      <tr>
        <td><%= classe.designation %></td>
        <td><%= classe.level %></td>
        <td><%= link_to 'Show', classe %></td>
        <td><%= link_to 'Edit', edit_class_path(classe) %></td>
        <td><%= link_to 'Destroy', classe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Class', new_class_path %>

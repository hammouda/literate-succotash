<section class="content-header">
      <h1>
        Classes
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Classes</li>
      </ol>
    </section>
    <section>
 <div class="col-md-12">
          <div class="box">
            <div class="box-header">


              <div class="box-tools">
<%= link_to 'New Class', new_class_path %>
            

<div class="nav navbar-right">
<%=form_tag(classes_path, method: :get) do %>
<%= text_field_tag :term, params[:term] %>
<%=submit_tag :Search  %>
<% end %>
</div>
<table>
  <thead>
    <tr>
      <th>Designation</th>
      <th>Level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

              </div>
            </div>
            <!-- /.box-header -->
